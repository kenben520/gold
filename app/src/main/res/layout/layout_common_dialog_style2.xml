<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/button_stroke_white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/lay_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/dialog_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="@dimen/default_padding"
            android:paddingTop="20dp"
            android:text="确定平仓?"
            android:textColor="#C4650C"
            android:textSize="19dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/bg_1"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:background="@drawable/lx_green_bg"
        android:gravity="center"
        android:layout_marginStart="30dp"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="30dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:lineSpacingExtra="3dp"
            android:lineSpacingMultiplier="1.0"
            android:text="平仓盈亏："
            android:textColor="#242424"
            android:textSize="@dimen/text_size_normal" />

        <TextView
            android:id="@+id/tv_winlost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:lineSpacingExtra="3dp"
            android:lineSpacingMultiplier="1.0"
            android:text="+$657.89"
            android:textColor="#0DA206"
            android:textSize="@dimen/text_size_normal" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginStart="30dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="22dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_price1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:lineSpacingExtra="3dp"
            android:lineSpacingMultiplier="1.0"
            android:text="1329.00"
            android:textColor="#242424"
            android:textSize="@dimen/text_size_normal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:lineSpacingMultiplier="1.0"
            android:text="→"
            android:textColor="#9E9E9E"
            android:textSize="@dimen/text_size_normal" />

        <TextView
            android:id="@+id/tv_price2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:lineSpacingExtra="3dp"
            android:lineSpacingMultiplier="1.0"
            android:text="1329.00"
            android:textColor="#242424"
            android:textSize="@dimen/text_size_normal" />

        <TextView
            android:id="@+id/tv_handnum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:lineSpacingExtra="3dp"
            android:lineSpacingMultiplier="1.0"
            android:layout_marginStart="20dp"
            android:text="2手"
            android:textColor="#242424"
            android:textSize="@dimen/text_size_normal" />
    </LinearLayout>


    <View style="@style/horizontalLine" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/dialog_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:maxLines="1"
            android:text="取消"
            android:textColor="@color/brownishGreyTwo"
            android:textSize="15dp"
            android:visibility="gone" />

        <View
            android:id="@+id/vertical_line_view"
            style="@style/verticalLine"/>

        <TextView
            android:id="@+id/dialog_commit"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:maxLines="1"
            android:text="反 馈"
            android:textColor="@color/mind"
            android:textSize="15dp"
            android:visibility="gone" />

    </LinearLayout>
</LinearLayout>