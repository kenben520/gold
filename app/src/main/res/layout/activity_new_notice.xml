<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tl="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whiteColor"
    android:orientation="vertical"
    tools:context=".ui.activity.NewNoticeActivity">

    <com.lingxi.preciousmetal.ui.widget.TopBarView
        android:id="@+id/topbar_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.flyco.tablayout.CommonTabLayout
        android:id="@+id/notice_tabLayout"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="#FFF8F8F8"
        tl:tl_iconVisible="false"
        tl:tl_indicator_color="@color/mind"
        tl:tl_indicator_height="2dp"
        tl:tl_indicator_width="50dp"
        tl:tl_textSelectColor="@color/mind"
        tl:tl_textUnselectColor="@color/FF9A9A9A"
        tl:tl_textsize="@dimen/sp_13"
        tl:tl_underline_color="#1A0A0204"
        tl:tl_underline_height="1dp" />

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_2"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>