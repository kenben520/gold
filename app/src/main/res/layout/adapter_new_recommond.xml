<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/dp_15"
    android:paddingTop="@dimen/dp_15">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="left"
        android:orientation="vertical">

        <TextView
            android:id="@+id/recommend_title_view"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:lines="2"
            android:text="老师"
            android:textColor="@color/ff33"
            android:textSize="@dimen/sp_16m" />

        <TextView
            android:id="@+id/recommend_time_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_12"
            android:drawableLeft="@drawable/lx_news_recom_time"
            android:drawablePadding="@dimen/dp_7"
            android:textColor="@color/grayFf9"
            android:textSize="@dimen/sp_13" />
    </LinearLayout>

    <ImageView
        android:id="@+id/recommend_imageView"
        android:layout_width="113dp"
        android:layout_height="75dp"
        android:layout_marginLeft="@dimen/dp_18"
        android:scaleType="fitXY" />

</LinearLayout>
