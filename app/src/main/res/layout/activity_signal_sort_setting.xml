<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whiteTwo"
    android:orientation="vertical">

    <com.lingxi.preciousmetal.ui.widget.TopBarView
        android:id="@+id/topbar_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="21dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="19dp"
        android:text="当前所有标签"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            style="@style/custom_signal_sort_tag_style"
            android:id="@+id/tag_1"
            android:layout_width="0dp"
            android:layout_height="27dp"
            android:layout_marginStart="15dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="1分钟"
            android:textSize="@dimen/text_size_1" />

        <TextView
            android:id="@+id/tag_2"
            style="@style/custom_signal_sort_tag_style"
            android:layout_width="0dp"
            android:layout_height="27dp"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="15dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="5分钟"
            android:textSize="@dimen/text_size_1" />

        <TextView
            android:id="@+id/tag_3"
            android:layout_width="0dp"
            android:layout_height="27dp"
            android:layout_marginEnd="15dp"
            android:layout_weight="1"
            style="@style/custom_signal_sort_tag_style"
            android:gravity="center"
            android:text="15分钟"
            android:textSize="@dimen/text_size_1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tag_4"
            android:layout_width="0dp"
            android:layout_height="27dp"
            android:layout_marginStart="15dp"
            android:layout_weight="1"
            style="@style/custom_signal_sort_tag_style"
            android:gravity="center"
            android:text="30分钟"
            android:textSize="@dimen/text_size_1" />

        <TextView
            android:id="@+id/tag_5"
            android:layout_width="0dp"
            android:layout_height="27dp"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="15dp"
            android:layout_weight="1"
            style="@style/custom_signal_sort_tag_style"
            android:gravity="center"
            android:text="1小时"
            android:textSize="@dimen/text_size_1" />

        <TextView
            android:id="@+id/tag_6"
            android:layout_width="0dp"
            android:layout_height="27dp"
            android:layout_marginEnd="15dp"
            android:layout_weight="1"
            style="@style/custom_signal_sort_tag_style"
            android:gravity="center"
            android:text="4小时"
            android:textSize="@dimen/text_size_1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tag_7"
            android:layout_width="0dp"
            android:layout_height="27dp"
            android:layout_marginStart="15dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="日线"
            style="@style/custom_signal_sort_tag_style"
            android:textSize="@dimen/text_size_1" />

        <TextView
            android:id="@+id/tag_8"
            android:layout_width="0dp"
            android:layout_height="27dp"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="15dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="周线"
            style="@style/custom_signal_sort_tag_style"
            android:textSize="@dimen/text_size_1" />

        <TextView
            android:id="@+id/tag_9"
            android:layout_width="0dp"
            android:layout_height="27dp"
            android:layout_marginEnd="15dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="月线"
            style="@style/custom_signal_sort_tag_style"
            android:textSize="@dimen/text_size_1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="52dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:text="自定义排序"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_2" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_weight="1"
            android:text="(按点击顺序排列)"
            android:textColor="@color/warmGrey"
            android:textSize="@dimen/text_size_1" />

        <TextView
            android:id="@+id/btn_reset"
            android:layout_width="46dp"
            android:layout_height="23dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/bg_corner_shape_y6"
            android:gravity="center"
            android:text="重置"
            android:textColor="@color/mind"
            android:textSize="@dimen/text_size_4" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_select_signal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" />

</LinearLayout>
