<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="285dp">
    <!--app:indicator_drawable_selected="@drawable/home_banner_select"-->
    <!--app:indicator_drawable_unselected="@drawable/home_banner_no_select"-->
    <!--app:indicator_drawable_selected="@drawable/lx_home_banner_seleted"-->
    <!--app:indicator_drawable_unselected="@drawable/lx_home_banner_noselected"-->
    <com.lingxi.preciousmetal.ui.widget.Banner
        android:id="@+id/advertising_banner_view"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        app:indicator_drawable_selected="@drawable/home_banner_selected"
        app:indicator_drawable_unselected="@drawable/home_banner_un_selected"
        app:indicator_height="5dp"
        app:indicator_margin="2.5dp"
        app:indicator_width="5dp" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="91dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dp_5"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        app:cardCornerRadius="3dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/whiteColor"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/market_gold_layout"
                style="@style/home_price_layout_style"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/market_gold_name_text"
                    style="@style/home_price_name_style"
                    android:text="伦敦金" />

                <TextView
                    android:id="@+id/market_gold_price_text"
                    style="@style/home_price_style"
                    android:text="1288.98" />

                <TextView
                    android:id="@+id/market_gold_percent_text"
                    style="@style/home_price_percent_style"
                    android:text="+3.65" />
            </LinearLayout>

            <View
                android:layout_width="@dimen/dp_0.5"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_15"
                android:background="@color/line" />

            <LinearLayout
                android:id="@+id/market_silver_layout"
                style="@style/home_price_layout_style">

                <TextView
                    android:id="@+id/market_silver_name_text"
                    style="@style/home_price_name_style"
                    android:text="伦敦银" />

                <TextView
                    android:id="@+id/market_silver_price_text"
                    style="@style/home_price_style"
                    android:text="1288.98" />

                <TextView
                    android:id="@+id/market_silver_percent_text"
                    style="@style/home_price_percent_style"
                    android:text="+3.65" />
            </LinearLayout>

            <View
                android:layout_width="@dimen/dp_0.5"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_15"
                android:background="@color/line" />

            <LinearLayout
                android:id="@+id/market_us_layout"
                style="@style/home_price_layout_style">

                <TextView
                    android:id="@+id/market_us_name_text"
                    style="@style/home_price_name_style"
                    android:text="美元指数" />

                <TextView
                    android:id="@+id/market_us_price_text"
                    style="@style/home_price_style"
                    android:text="1288.98" />

                <TextView
                    android:id="@+id/market_us_percent_text"
                    style="@style/home_price_percent_style"
                    android:text="-3.65 +3.65" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>