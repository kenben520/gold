<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/adapter_position_analyse"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:minHeight="42dp"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/dp_15"
    android:paddingRight="@dimen/dp_15">

    <TextView
        android:id="@+id/analyse_name_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="left"
        android:text="纽约期金"
        android:textColor="@color/ff33"
        android:textSize="@dimen/sp_16m" />

    <TextView
        android:id="@+id/analyse_up_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="123456"
        android:textColor="@color/FF4A3C2F"
        android:textSize="@dimen/sp_15m" />

    <TextView
        android:id="@+id/analyse_loss_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="123456"
        android:textColor="@color/FF4A3C2F"
        android:textSize="@dimen/sp_16m" />

    <TextView
        android:id="@+id/analyse_time_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="right"
        android:text="123456"
        android:textColor="#FF808080"
        android:textSize="@dimen/sp_15m" />
</LinearLayout>

