<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:fillViewport="true"
android:scrollbars="none">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical">
    <com.lingxi.preciousmetal.ui.widget.TopBarView
        android:id="@+id/topbar_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="11dp"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="11dp"
        android:text="如果您在使用的过程中，有任何的问题或者建议，请给我们留言，并留下您的联系方式。"
        android:textColor="@color/gray13"
        android:textSize="@dimen/text_size_4" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="17dp"
        android:layout_marginStart="17dp"
        android:background="@drawable/bg_corner_shape_w1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="14dp"
                android:layout_weight="1"
                android:text="*问题描述"
                android:textColor="@color/black1"
                android:textSize="@dimen/text_size_4" />

            <TextView
                android:id="@+id/tv_len_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="18dp"
                android:text="0/200"
                android:textColor="@color/gray13"
                android:textSize="14dp" />
        </LinearLayout>

        <EditText
            android:id="@+id/et_inf"
            style="@style/show_trade_text"
            android:layout_width="match_parent"
            android:layout_height="102dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="start"
            android:layout_marginEnd="18dp"
            android:layout_marginStart="14dp"
            android:textColorHint="@color/gray16"
            android:hint="请留下您宝贵的建议"
            android:lineSpacingExtra="8dp"
            android:textColor="@color/black1" />

        <RelativeLayout
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginStart="14dp"
            android:layout_marginTop="9dp"
            android:background="@color/whiteFour"
            android:gravity="center"
            android:layerType="software">


            <ImageView
                android:layout_width="27dp"
                android:layout_height="24dp"
                android:layout_centerInParent="true"
                android:background="@drawable/lx_feedback_pic"
                />

            <ImageView
                android:id="@+id/iv_pic"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="14dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            
            <View
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="-10dp"
                android:background="@drawable/bg_circle_gray1"/>

            <View
                android:id="@+id/dotted_line"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginEnd="14dp"
                android:layout_marginStart="14dp"
                android:layout_height="10dp"
                android:background="@drawable/bg_dashed2"
                android:layerType="software"
                />
            <View
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginEnd="-10dp"
                android:background="@drawable/bg_circle_gray1"/>
        </LinearLayout>
        


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="21dp"
            android:layout_marginEnd="14dp"
            android:layout_marginStart="14dp"
            android:gravity="center_vertical"
            android:layout_marginBottom="23dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_phone_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin_12"
                android:text="手机号码"
                android:textColor="@color/black1"
                android:textSize="@dimen/text_size_2" />

            <EditText
                android:id="@+id/edit_phone_num"
                style="@style/login_edit"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/margin_12"
                android:layout_weight="1"
                android:textColor="@color/gray16"
                android:hint="选填，方便我们及时向您反馈"
                android:inputType="number"
                android:maxLength="11" />
        </LinearLayout>
    </LinearLayout>



    <TextView
        android:id="@+id/btn_next"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginBottom="19dp"
        android:layout_marginTop="33dp"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:background="@drawable/selector_button"
        android:gravity="center"
        android:text="提交"
        android:enabled="false"
        android:textColor="@color/whiteTwo"
        android:textSize="@dimen/text_size_3" />

</LinearLayout>
</ScrollView>