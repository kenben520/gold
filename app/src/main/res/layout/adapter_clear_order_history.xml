<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/clear_order_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:minHeight="85dp"
    android:orientation="vertical"
    android:paddingLeft="@dimen/dp_15"
    android:paddingRight="@dimen/dp_15">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.3"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/clear_order_type_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="黄金"
                android:textColor="@color/blackFF29"
                android:textSize="@dimen/text_size_6" />

            <TextView
                android:id="@+id/clear_order_direction_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_5"
                android:background="@color/chart_red"
                android:paddingLeft="@dimen/dp_4"
                android:paddingRight="@dimen/dp_4"
                android:text="@string/kBuy"
                android:textColor="@color/whiteTwo"
                android:textSize="@dimen/sp_10" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_3"
                android:background="@color/yellowC4"
                android:paddingLeft="@dimen/dp_4"
                android:paddingRight="@dimen/dp_4"
                android:text="平仓"
                android:textColor="@color/whiteTwo"
                android:textSize="@dimen/sp_10" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.9">

            <TextView
                android:id="@+id/clear_order_time_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:text="2018.05.04 13:02:56"
                android:textColor="@color/grayFf9"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/clear_order_id_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:textColor="@color/grayFf9"
                android:textSize="@dimen/sp_12" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_5"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.2"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="建仓价"
                    android:textColor="@color/grayFf9"
                    android:textSize="@dimen/sp_13" />

                <TextView
                    android:id="@+id/clear_order_price_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="@dimen/dp_5"
                    android:drawableRight="@drawable/lx_exchange_home_arrow"
                    android:text="1311.54"
                    android:textColor="@color/blackFF29"
                    android:textSize="@dimen/text_size_2" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="平仓价"
                    android:textColor="@color/grayFf9"
                    android:textSize="@dimen/sp_12" />

                <TextView
                    android:id="@+id/clear_order_close_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1311.54"
                    android:textColor="@color/blackFF29"
                    android:textSize="@dimen/text_size_2" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="交易手数"
                    android:textColor="@color/grayFf9"
                    android:textSize="@dimen/sp_12" />

                <TextView
                    android:id="@+id/clear_order_volume_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10.01"
                    android:textColor="@color/blackFF29"
                    android:textSize="@dimen/text_size_2" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="right"
                    android:text="平仓盈亏"
                    android:textColor="@color/grayFf9"
                    android:textSize="@dimen/sp_12" />

                <TextView
                    android:id="@+id/clear_order_profit_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="-1.26"
                    android:textColor="@color/orangeyRedTwo"
                    android:textSize="@dimen/text_size_2" />
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>

</LinearLayout>
