<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="42dp"
    android:layout_marginBottom="@dimen/dp_5"
    android:layout_marginLeft="@dimen/dp_5"
    android:layout_marginRight="@dimen/dp_5"
    android:layout_marginTop="@dimen/dp_5"
    android:gravity="center">

    <View
        android:id="@+id/centerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dp_5"
        android:layout_marginRight="@dimen/dp_5" />

    <RelativeLayout
        android:id="@+id/sell_gold_View"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/centerView"
        android:background="@drawable/shape_red_circle"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_20"
            android:text="@string/kSell"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/sell_gold_value_View"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_20"
            android:text="13434"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_16m" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/buy_gold_View"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/centerView"
        android:background="@drawable/shape_green_circle"
        android:gravity="center">

        <TextView
            android:id="@+id/buy_gold_value_View"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_10"
            android:text="13434"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_16m" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="22dp"
            android:text="@string/kBuy"
            android:textColor="@color/white" />
    </RelativeLayout>

    <TextView
        android:id="@+id/price_spread_view"
        android:layout_width="25dp"
        android:layout_height="22dp"
        android:layout_alignTop="@+id/buy_gold_View"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/shape_whitetwo_circle"
        android:gravity="center"
        android:text="50"
        android:textColor="@color/blackTwo" />
</RelativeLayout>

