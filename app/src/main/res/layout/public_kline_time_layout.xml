<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <com.gxz.PagerSlidingTabStrip
        android:id="@+id/k_tools_tabs"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="#251E15"
        android:textColor="@color/white30"
        android:textSize="@dimen/sp_12"
        app:pstsDividerColor="@android:color/transparent"
        app:pstsIndicatorColor="@color/whiteColor"
        app:pstsIndicatorHeight="2dp"
        app:pstsScaleZoomMax="0"
        app:pstsShouldExpand="false"
        app:pstsTabPaddingLeftRight="12dp"
        app:pstsTextSelectedColor="@color/whiteColor"
        app:pstsUnderlineColor="#251E15"
        app:pstsUnderlineHeight="2dp" />

    <android.support.v4.view.ViewPager
        android:id="@+id/k_main_pager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" />
</LinearLayout>
