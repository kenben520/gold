<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/money_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:minHeight="58dp"
    android:orientation="vertical"
    android:paddingLeft="@dimen/dp_15"
    android:paddingRight="@dimen/dp_15">

    <TextView
        android:id="@+id/money_time_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="可用保证金"
        android:textColor="@color/blackFF29"
        android:textSize="@dimen/sp_15" />

    <TextView
        android:id="@+id/money_type_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="47dp"
        android:layout_toRightOf="@+id/money_time_view"
        android:text="点差返回"
        android:textColor="@color/grayFf9"
        android:textSize="@dimen/sp_15" />

    <TextView
        android:id="@+id/money_money_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="12323323"
        android:textColor="@color/blackFF29"
        android:textSize="@dimen/sp_15" />

</RelativeLayout>
