<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:id="@+id/driver_view"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/C9"
        android:visibility="gone" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/list_selector"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/set_imageview_img"
            android:layout_width="23dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="18dp"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/set_textview_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/set_imageview_img"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:text=""
            android:textColor="@color/black"
            android:textSize="14dp" />

        <ImageView
            android:id="@+id/new_notice_imgView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/set_textview_title"
            android:paddingTop="@dimen/dp_5"
            android:scaleType="fitXY"
            android:src="@drawable/new_notice"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/set_textview_right_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="15dp"
                android:gravity="center_vertical"
                android:textColor="@color/message_line"
                android:textSize="14dp" />
            <ImageView
                android:id="@+id/set_imageview_right_arrow"
                android:layout_width="6dp"
                android:layout_height="11dp"
                android:layout_marginRight="15dp"
                android:src="@drawable/ic_gray_arrow_right"
                android:visibility="gone" />
        </LinearLayout>

        <View
            android:id="@+id/set_view_divider"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:background="@color/C7" />

    </RelativeLayout>

    <View
        android:id="@+id/set_view_item_divider"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/line"
        android:visibility="gone" />
</LinearLayout>



