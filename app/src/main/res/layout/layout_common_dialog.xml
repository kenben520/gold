<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/button_stroke_white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/lay_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/dialog_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="@dimen/default_padding"
            android:paddingTop="20dp"
            android:text="提示"
            android:textColor="@color/black"
            android:textSize="19dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lay_dialog_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/dialog_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:lineSpacingExtra="3dp"
            android:lineSpacingMultiplier="1.0"
            android:paddingBottom="20dp"
            android:paddingLeft="23dp"
            android:paddingTop="20dp"
            android:paddingRight="23dp"
            android:text="提示内容提示内容失败，可反馈给程序猿马上处理"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_normal" />

    </LinearLayout>

    <View style="@style/horizontalLine" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/dialog_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:maxLines="1"
            android:text="取消"
            android:textColor="@color/brownishGreyTwo"
            android:textSize="15dp"
            android:visibility="gone" />

        <View
            android:id="@+id/vertical_line_view"
            style="@style/verticalLine"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/dialog_commit"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:maxLines="1"
            android:text="反 馈"
            android:textColor="@color/mind"
            android:textSize="15dp"
            android:visibility="gone" />

    </LinearLayout>
</LinearLayout>