<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/trade_position_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:minHeight="85dp"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:gravity="bottom"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/position_type_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/blackFF29"
                android:textSize="@dimen/text_size_6" />

            <TextView
                android:id="@+id/position_id_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginStart="6dp"
                android:singleLine="true"
                android:textColor="@color/grayFf9"
                android:textSize="@dimen/text_size_1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/position_price_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="1311.54"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_4" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="5dp"
                android:src="@drawable/lx_exchange_home_arrow" />

            <TextView
                android:id="@+id/position_now_price_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="1311.54"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_4" />

            <ImageView
                android:id="@+id/iv_k_up_down"
                android:layout_width="10dp"
                android:layout_gravity="center_vertical"
                android:layout_height="6dp"
                android:layout_marginStart="3dp"/>
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/vl2"
        style="@style/verticalLine"
        android:layout_height="43dp"
        android:layout_marginEnd="3dp"
        android:layout_marginStart="12dp"
        android:background="@color/whiteFive" />

    <LinearLayout
        android:layout_width="78dp"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|left"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:gravity="bottom"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/position_direction_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/chart_red"
                android:paddingLeft="@dimen/dp_4"
                android:paddingRight="@dimen/dp_4"
                android:text="买涨"
                android:textColor="@color/whiteTwo"
                android:textSize="@dimen/text_size_1"
                android:visibility="gone" />

            <TextView
                android:id="@+id/position_volume_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.01手"
                android:textColor="@color/grayFf9"
                android:textSize="@dimen/text_size_1" />
        </LinearLayout>

        <TextView
            android:id="@+id/position_pnl_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="10dp"
            android:textColor="@color/green"
            android:textSize="@dimen/text_size_2" />
    </LinearLayout>

    <View
        android:id="@+id/vl1"
        style="@style/verticalLine"
        android:layout_height="43dp"
        android:layout_marginEnd="12dp"
        android:layout_marginStart="12dp"
        android:background="@color/whiteFive" />

    <TextView
        android:id="@+id/position_close_view"
        android:layout_width="70dp"
        android:layout_height="31dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="15dp"
        android:background="@drawable/bg_btn_close_position_selector"
        android:gravity="center"
        android:text="平仓"
        android:textColor="@color/mind"
        android:textSize="@dimen/sp_13" />
</LinearLayout>
