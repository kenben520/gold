<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/kMarket_adapter_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:id="@+id/special_remark_line_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0.5"
        android:layout_marginBottom="@dimen/dp_15"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="@dimen/dp_15"
        android:background="@color/line" />

    <!--android:layout_marginBottom="@dimen/dp_10"-->
    <!--android:paddingBottom="@dimen/dp_15"-->
    <!--android:paddingTop="@dimen/dp_15"-->

    <RelativeLayout
        android:id="@+id/special_remark_time_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_15"
        android:layout_marginTop="18dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/special_remark_time_view"
            android:background="@drawable/lx_strategy_left_line" />

        <TextView
            android:id="@+id/special_remark_time_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:lines="1"
            android:text="2018-06-11"
            android:textColor="@color/FFCA731F"
            android:textSize="@dimen/sp_14m" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/special_remark_time_view"
            android:background="@drawable/lx_strategy_right_line" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!--lx_strategy_night-->
        <ImageView
            android:id="@+id/special_remark_type_imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/lx_strategy_morning" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_13"
            android:orientation="vertical">

            <TextView
                android:id="@+id/special_remark_title_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="1"
                android:text="贺华明：鲍威尔支持加息 黄金延续弱势…"
                android:textColor="@color/ff33"
                android:textSize="@dimen/sp_16m" />

            <TextView
                android:id="@+id/special_remark_content_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_7"
                android:ellipsize="end"
                android:lines="2"
                android:text="美国经济持续复苏，同时就业市场表现出色，美联储主席鲍威尔支持加息，美元指数小幅上行，延…"
                android:textColor="@color/FF858585"
                android:textSize="@dimen/sp_14m" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>
