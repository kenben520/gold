<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/adapter_position_analyse"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:minHeight="42dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/cftc_name_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="纽约期金"
        android:textColor="@color/ff33"
        android:textSize="@dimen/sp_16m" />

    <TextView
        android:id="@+id/cftc_up_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_50"
        android:text="78%"
        android:textColor="@color/ff33"
        android:textSize="@dimen/sp_15m" />

    <com.lingxi.preciousmetal.ui.widget.CustomSeekBar
        android:id="@+id/cftc_seekbarView"
        android:layout_width="0dp"
        android:layout_height="6dp"
        android:layout_marginLeft="@dimen/dp_7"
        android:layout_weight="1"
        android:clickable="false"
        android:max="100"
        android:paddingEnd="0dp"
        android:paddingStart="0dp"
        android:progress="50"
        android:progressDrawable="@drawable/po_red_green_seekbar"
        android:secondaryProgress="0"
        android:thumb="@null"
        android:thumbOffset="0dp" />

    <TextView
        android:id="@+id/cftc_loss_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_7"
        android:text="78%"
        android:textColor="@color/ff33"
        android:textSize="@dimen/sp_15m" />
</LinearLayout>

