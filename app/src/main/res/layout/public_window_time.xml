<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_marginTop="@dimen/dp_20"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/w_start_time_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/solid_light_whitle"
            android:gravity="center"
            android:text="请选择时间范围"
            android:textColor="@color/mind"
            android:textSize="@dimen/sp_15" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:background="@drawable/lx_exchange_history_pop_up_arrow" />

        <TextView
            android:id="@+id/w_end_time_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/solid_light_whitle"
            android:gravity="center"
            android:text="请选择时间范围"
            android:textColor="@color/mind"
            android:textSize="@dimen/sp_15" />
    </LinearLayout>

    <RadioGroup
        android:id="@+id/time_RadioGroup"
        android:layout_width="match_parent"
        android:layout_height="23dp"
        android:layout_marginTop="23dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/time_today_radio"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/db_sel_yellow_un_white_2"
            android:button="@null"
            android:gravity="center"
            android:text="当日"
            android:textColor="@drawable/text_sle_white_un_fe_color" />

        <RadioButton
            android:id="@+id/time_week_radio"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_weight="1"
            android:background="@drawable/db_sel_yellow_un_white_2"
            android:button="@null"
            android:gravity="center"
            android:text="近一周"
            android:textColor="@drawable/text_sle_white_un_fe_color" />

        <RadioButton
            android:id="@+id/time_month_radio"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_weight="1"
            android:background="@drawable/db_sel_yellow_un_white_2"
            android:button="@null"
            android:checked="true"
            android:gravity="center"
            android:text="近一月"
            android:textColor="@drawable/text_sle_white_un_fe_color" />

        <RadioButton
            android:id="@+id/time_year_radio"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_weight="1"
            android:background="@drawable/db_sel_yellow_un_white_2"
            android:button="@null"
            android:gravity="center"
            android:text="近一年"
            android:textColor="@drawable/text_sle_white_un_fe_color" />
    </RadioGroup>


</LinearLayout>