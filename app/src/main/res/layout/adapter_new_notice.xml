<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:gravity="center_vertical"
    android:minHeight="100dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/notice_name_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:lines="1"
        android:textColor="@color/ff33"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/notice_content_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_5"
        android:ellipsize="end"
        android:lines="1"
        android:text="法国央行行长维勒鲁瓦：贸易保护主义是危险的啊…"
        android:textColor="@color/FF858585"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/notice_time_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableLeft="@drawable/lx_notice_time"
            android:drawablePadding="@dimen/dp_5"
            android:gravity="left"
            android:lines="1"
            android:text="2018-06-08 10:00:00"
            android:textColor="@color/ff33"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/notice_look_content_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="@dimen/dp_5"
            android:drawableRight="@drawable/lx_notice_arrow"
            android:gravity="right"
            android:lines="1"
            android:text="查看详情"
            android:textColor="@color/mind"
            android:textSize="13sp" />
    </LinearLayout>
</LinearLayout>