<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.lingxi.preciousmetal.ui.widget.TopBarView
        android:id="@+id/topbar_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.gxz.PagerSlidingTabStrip
        android:id="@+id/news_main_tabs"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@color/FFf7f7f7"
        android:textColor="@color/warmGreyTwo"
        android:textSize="@dimen/sp_15"
        app:pstsDividerColor="@color/transparent"
        app:pstsIndicatorColor="@color/mind"
        app:pstsIndicatorHeight="2dp"
        app:pstsScaleZoomMax="0"
        app:pstsShouldExpand="true"
        app:pstsSmoothScrollWhenClickTab="false"
        app:pstsTabPaddingLeftRight="2dp"
        app:pstsTextSelectedColor="@color/mind"
        app:pstsUnderlineColor="@color/lineTab"
        app:pstsUnderlineHeight="1dp" />

    <android.support.v4.view.ViewPager
        android:id="@+id/news_main_pager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
