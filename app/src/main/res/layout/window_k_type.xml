<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/windowColor"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_15"
        android:background="@drawable/shape_white_bg_border_circle"
        android:minHeight="164dp"
        android:orientation="vertical"
        android:padding="@dimen/dp_15">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/first_title_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="请选择图表类型"
                android:textColor="@color/FF9D9D9D"
                android:textSize="@dimen/sp_14m" />

            <ImageView
                android:id="@+id/indicatiors_close_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@mipmap/indicatiors_close" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0.5"
            android:layout_marginTop="40dp"
            android:background="#FFEAEAEA" />

        <RadioGroup
            android:id="@+id/radioGroup_kType_layout"
            android:layout_width="match_parent"
            android:layout_height="38dp"

            android:gravity="center"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/type_kCandle_radio"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/shape_yellow1_white"
                android:button="@null"
                android:checked="true"
                android:gravity="center"
                android:text="蜡烛图"
                android:textColor="@drawable/db_normal_black_yellow_text_color" />

            <RadioButton
                android:id="@+id/type_kRod_radio"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/shape_yellow1_white"
                android:button="@null"
                android:gravity="center"
                android:text="棒形图"
                android:textColor="@drawable/db_normal_black_yellow_text_color" />

            <RadioButton
                android:id="@+id/type_kline_radio"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/shape_yellow1_white"
                android:button="@null"
                android:gravity="center"
                android:text="线形图"
                android:textColor="@drawable/db_normal_black_yellow_text_color" />
        </RadioGroup>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0.5"
            android:background="#FFEAEAEA" />
    </LinearLayout>
</LinearLayout>
