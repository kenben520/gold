<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:background="@mipmap/base_title_bg"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="22dp">

        <LinearLayout
            android:id="@+id/layout_left_btn"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:visibility="gone">

            <ImageView
                android:id="@+id/left_btn"
                android:layout_width="10dp"
                android:layout_height="20dp"
                android:layout_marginLeft="15dp"
                android:background="@null"
                android:scaleType="centerInside"
                android:src="@drawable/btn_back" />

            <TextView
                android:id="@+id/left_title"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginLeft="15dp"
                android:text="取消"
                android:textColor="@color/whiteTwo"
                android:textSize="16dp"
                android:visibility="gone" />
        </LinearLayout>

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:ellipsize="end"
            android:gravity="center_horizontal"
            android:maxWidth="200dp"
            android:singleLine="true"
            android:text="TITLE"
            android:textColor="@color/whiteTwo"
            android:textSize="16dp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/right_btn"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@null"
            android:scaleType="centerInside"
            android:visibility="gone" />

        <TextView
            android:id="@+id/action_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:background="@color/transparent"
            android:gravity="center"
            android:text="ACTION"
            android:textColor="@color/whiteTwo"
            android:textSize="16dp"
            android:visibility="visible" />

        <View
            android:id="@+id/top_bar_divide"
            android:layout_width="match_parent"
            android:layout_height="2.5dp"
            android:layout_alignParentBottom="true"
            android:background="@color/greyishBrown" />

        <ImageView
            android:id="@+id/search_close_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingRight="@dimen/dp_15"
            android:paddingLeft="@dimen/dp_15"
            android:src="@drawable/lx_know_search"
            android:visibility="gone" />

    </RelativeLayout>
</LinearLayout>