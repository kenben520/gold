<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_home_news_comment"
    android:layout_width="match_parent"
    android:layout_height="32dp"
    android:layout_marginTop="@dimen/dp_13"
    android:background="@color/F7F7F7"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/home_news_type_imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_8" />

    <TextView
        android:id="@+id/home_news_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_5"
        android:layout_marginRight="@dimen/dp_5"
        android:layout_weight="1"
        android:drawableRight="@drawable/home_remark_right"
        android:ellipsize="end"
        android:lines="1"
        android:text="黄金回头望月 空头警报拉起"
        android:textColor="@color/blackFF66"
        android:textSize="@dimen/sp_12" />

</LinearLayout>