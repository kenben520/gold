<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CustomCircleProgressBar">
        <attr name="outside_color" format="color" />
        <attr name="outside_radius" format="dimension" />
        <attr name="inside_color" format="color" />
        <attr name="progress_text_color" format="color" />
        <attr name="progress_text_size" format="dimension" />
        <attr name="progress_width" format="dimension" />
        <attr name="max_progress" format="integer" />
        <attr name="progress" format="float" />
        <attr name="name" format="string" />
        <attr name="direction">
            <enum name="left" value="0" />
            <enum name="top" value="1" />
            <enum name="right" value="2" />
            <enum name="bottom" value="3" />
        </attr>
    </declare-styleable>

    <declare-styleable name="ImageRatingView">
        <attr name="maxCount" format="integer" />
        <attr name="minStep" format="float" />
        <attr name="frontImage" format="reference" />
        <attr name="backImage" format="reference" />
        <attr name="spanSize" format="dimension" />
        <attr name="rating" format="float" />
        <attr name="touchable" format="boolean" />
        <attr name="imageWidth" format="dimension" />
        <attr name="imageHeight" format="dimension" />
    </declare-styleable>

    <declare-styleable name="ExpandableTextView">
        <attr name="maxCollapsedLines" format="integer" />
        <attr name="animDuration" format="integer" />
        <attr name="animAlphaStart" format="float" />
        <attr name="expandDrawable" format="reference" />
        <attr name="collapseDrawable" format="reference" />
    </declare-styleable>


    <declare-styleable name="TabView">
        <attr name="tab_textViewSelColor" format="reference|color" />
        <attr name="tab_textViewUnSelColor" format="reference|color" />
        <attr name="tab_tabViewBackgroundColor" format="reference|color" />
        <attr name="tab_tabViewHeight" format="dimension" />
        <attr name="imageViewTextViewMargin" format="dimension" />
        <attr name="tab_textViewSize" format="dimension" />
        <attr name="tab_imageViewWidth" format="dimension" />
        <attr name="tab_imageViewHeight" format="dimension" />
        <attr name="tab_tabViewGravity">
            <flag name="top" value="0x30" />
            <flag name="bottom" value="0x50" />
            <flag name="left" value="0x03" />
            <flag name="right" value="0x05" />
        </attr>
        <attr name="tab_tabViewDefaultPosition" format="integer" />
    </declare-styleable>

</resources>